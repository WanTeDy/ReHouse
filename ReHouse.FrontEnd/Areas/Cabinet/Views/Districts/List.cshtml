@using ReHouse.Utils.Helpers
@using ReHouse.Utils.DataBase.Geo;
@model List<District>
@{
    Layout = "~/Areas/Cabinet/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_navigation", "districts")

<div id="adminka2" class="tabset_content">
    <div class="headline">
        <h2>Добавленные районы</h2>
        <form method="LINK" action="/cabinet/districts/add">
            <button>Добавить район ►</button>
        </form>
    </div>

    @if (!ViewBag.NoElements)
    {

        <div class="added">
            <button onclick="deleteChekedProducts();" class="delete_all">Удалить выбранные</button>
            <table class="added" id="data-container">
                @Html.Partial("District/_listOfDistricts", Model)
            </table>
        </div>        
    }

</div>
@section scripts {
    @Scripts.Render("~/bundles/deleteDistricts")

    
}