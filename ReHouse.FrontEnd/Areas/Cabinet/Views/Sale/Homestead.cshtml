@using ReHouse.Utils.Helpers
@using ReHouse.FrontEnd.Models
@model LoadAdvertsModel
@{
    Layout = "~/Areas/Cabinet/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_navigation", "sale")

<div id="adminka2" class="tabset_content">
    <div class="headline">
        <h2>Добавленные объявления продажи участков</h2>
        <form method="LINK" action="/cabinet/sale/add/@((int)ParrentCategories.Homestead)">
            <button>Добавить новое объявление ►</button>
        </form>
    </div>


    @Html.Partial("Advert/_filters", Model)

    @if (!ViewBag.NoElements)
    {

        <div class="added">
            <button onclick="deleteChekedProducts();" class="delete_all">Удалить выбранные</button>
            <table class="added" id="data-container">
                @Html.Partial("Advert/_listOfAdverts", Model.Adverts)
            </table>
        </div>
        <div>
            <div class="products1">
                <div id="button-more">
                    <a id="more">Больше объявлений</a>
                </div>
            </div>
        </div>
        <div id="loading-div">

        </div>
    }

</div>
@section scripts {
    @Scripts.Render("~/bundles/advertSettingsAdmin")
    @Scripts.Render("~/bundles/deleteAdverts")
    <script>
        var deleteUrl = "/cabinet/sale/delete";
    </script>
}