@using ReHouse.Utils.Helpers
@using ReHouse.Utils.DataBase.News;
@model List<Partner>
@{
    Layout = "~/Areas/Cabinet/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_navigation", "partners")
<div id="adminka2" class="tabset_content">
    <div class="headline">
        <h2>Добавленные партнеры</h2>
        <form method="post" enctype="multipart/form-data" action="/cabinet/partners/add" >
            @Html.AntiForgeryToken()
            <input type="file" name="image" />
            <button>Добавить партнера ►</button>
        </form>
    </div>

    @if (!ViewBag.NoElements)
    {

        <div class="added">
            <button onclick="deleteChekedProducts();" class="delete_all">Удалить выбранные</button>
            <table class="added" id="data-container">
                @Html.Partial("Partner/_listOfPartners", Model)
            </table>
        </div>        
    }

</div>
@section scripts {
    @Scripts.Render("~/bundles/deletePartners")
}