@using ReHouse.Utils.DataBase.AdvertParams
@model List<NewBuilding>

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td><input type="checkbox" class="checkbox" id="checkbox" value="@item.Id" style="width:20px;" /></td>
            <td>@item.Id</td>
            <td>
                <div class="prod_info">
                    <h3>@item.Name</h3>
                </div>
            </td>
            <td>@(item.IsModerated ? "Одобрено" : "Неодобрено")</td>
            <td>@item.Adress</td>
            <td>@item.Price$</td>
            <td>
                <div class="edit_del">
                    <form method="LINK" action="/cabinet/newbuilding/edit/@item.Id">
                        <button>Редактировать</button>
                    </form>
                    <pre> </pre>
                    <p>/</p>
                    <pre> </pre>
                    <button onclick="deleteProducts([@item.Id])">Удалить</button>
                </div>
            </td>
        </tr>
    }
}