@using ReHouse.Utils.DataBase.Common
@model List<PageText>

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>
                <div class="prod_info">
                    <h3>@item.FullUrl</h3>
                </div>
            </td>
            <td>@item.TextBlockName</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <div class="edit_del">
                    <form method="LINK" action="/cabinet/texts/edit/@item.Id">
                        <button>Редактировать</button>
                    </form>                    
                </div>
            </td>
        </tr>
    }
}