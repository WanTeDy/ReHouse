@using ReHouse.Utils.DataBase.Common
@{
    List<PageText> texts = ViewBag.PageTexts as List<PageText>;
}
@section scripts {
    @Scripts.Render("~/bundles/fancybox")
    <script type="text/javascript">
        $(document).ready(function () {
            $("a.plan").fancybox();
            $("a.plan").fancybox({ "frameWidth": 1560, "frameHeight": 1340 });
        });
    </script>
}
<div class="navigation_string">
    <div class="way">
        <a href="/">Главная</a>
        <pre> </pre>
        <p>/</p>
        <pre> </pre>
        <a href="/home/about">О компании</a>
    </div>
</div>
<div class="about_company">
    @if (texts != null)
    {
        var main = texts.FirstOrDefault(x => x.TextBlockName == "Main");
        if (main != null)
        {
            <h2>@main.Title</h2>
            <p>@Html.Raw(main.Description)</p>
        }
    }
</div>
