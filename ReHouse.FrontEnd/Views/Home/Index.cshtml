                            <div><img src="~/Content/images/m21.png" height="32" alt="" /><p>150м<sup>2</sup></p></div>
                        </div>
                        <div class="bottom">
                            <p class="cost">от @item.Price грн/м²</p>
                            <div class="like" onclick="addtocart(@item.Id, '@AdvertsType.NewBuilding', true, this);"></div>
                        </div>
