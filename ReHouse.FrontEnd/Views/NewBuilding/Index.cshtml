@using ReHouse.Utils.DataBase.AdvertParams
@model List<NewBuilding>
<div class="navigation_string">
    <div class="way">
        @Html.ActionLink("Главная", "Index", "Home")
        <pre> </pre>
        <p>/</p>
        <pre> </pre>
        @Html.ActionLink("Новостройки", "Index", "NewBuilding")
    </div>
</div>
<div class="h2novostroy"><h2>Новостройки</h2></div>
<div class="selection">
    <div class="region">
        <select id="district">
            <option selected value="0">Выбрать район</option>
            @foreach (var district in ViewBag.Districts)
            {
                <option value="@district.Id">@district.RussianName</option>
            }
        </select>
    </div>

    <div class="_cost">
        <select id="price">
            <option selected value="0">Цена за кв. м</option>
            @for (int i = 0; i < ViewBag.Prices.Count; i++)
            {
                if (i == 0)
                {
                    <option value="@ViewBag.Prices[i].Id">до @ViewBag.Prices[i].Max грн</option>
                }
                else if (i == ViewBag.Prices.Count - 1)
                {
                    <option value="@ViewBag.Prices[i].Id">выше @ViewBag.Prices[i].Min грн</option>
                }
                else
                {
                    <option value="@ViewBag.Prices[i].Id">@ViewBag.Prices[i].Min-@ViewBag.Prices[i].Max грн</option>
                }
            }
        </select>
    </div>

    <div class="ck">
        <select id="builder">
            <option selected value="0">Выбрать по CK</option>
            @foreach (var builder in ViewBag.Builders)
            {
                <option value="@builder.Id">@builder.Name</option>
            }
        </select>
    </div>

    <div class="timeofready">
        <select id="date">
            <option selected value="0">Cрок сдачи</option>
            @foreach (var date in ViewBag.ExpluatationDates)
            {
                <option value="@date.Id">@date.Name</option>
            }
        </select>
    </div>

    <div class="search-button" id="search">
        <a>Поиск</a>
    </div>
</div>

@if (!ViewBag.NoElements)
{
    <div class="products">
        <ul class="prods" id="data-container">
            @Html.Partial("NewB/_listOfNewBuildings", Model);
        </ul>
        <div id="button-more" onclick="lazyload.load()">
            <a id="more">Больше объявлений</a>
        </div>
    </div>
    <div id="loading-div">
        <p><img style="filter:hue-rotate(-25deg)" src="~/Content/images/load.gif" /></p>
    </div>
}
