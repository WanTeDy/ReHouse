@using ReHouse.FrontEnd.Models
@model LoadCartModel

<div class="navigation_string">
    <div class="way">
        <a href="/">Главная</a>
        <pre> </pre>
        <p>/</p>
        <pre> </pre>
        <a href="/search/flats">Поиск</a>
    </div>
</div>
<div class="h2novostroy"><h2>Найденные объявления</h2></div>

@if (!ViewBag.NoElements)
{
    <div class="products">
        <ul class="prods" id="data-container">

            @Html.Partial("Search/_listOfAdverts", Model.Adverts)

        </ul>
        <div id="button-more">
            <a id="more">Больше объявлений</a>
        </div>
    </div>
    <div id="loading-div">

    </div>
}
<script>
    var url = "/search/load/";

    function search_lazyload(search) {
        var query = '@ViewBag.Query';
        var obj = {
            "Query": query,
        }
        lazyload(obj, url, search);
    }

    $('#button-more').click(function () {
        search_lazyload(false);
    });

</script>
