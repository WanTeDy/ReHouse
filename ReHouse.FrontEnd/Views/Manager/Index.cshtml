<div class="container">
    <div class="h2novostroy"><h2><span>Наши</span> менеджеры</h2></div>
    <div class="managers">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                if (item.Role.RussianName == ConstV.RoleSeo) { continue; }

                <div class="manager_">
                    <div class="img">

                        <a href="@(!String.IsNullOrEmpty(item.MessengerName)? "https://www.messenger.com/t/" + item.MessengerName:"#")">
                            @if (item.Avatar != null)
                            {
                                <img src="@Url.Content(item.Avatar.Url + item.Avatar.FileName)?w=210&h=210&mode=max"/>
                            }
                            else
                            {
                                <img src="~/content/images/girl1.png">
                            }
                        </a>
                    </div>
                    <div class="contactinfo">
                        <h3>
                            <a href="@(!String.IsNullOrEmpty(item.MessengerName)? "https://www.messenger.com/t/" + item.MessengerName:"#")">
                                @item.FirstName
                            </a>
                        </h3>
                        <h3>@item.Position</h3>
                        <h3>Контакты:</h3>
                        @if (item.Phones != null && item.Phones.Count > 0)
                    {
                        foreach (var phone in item.Phones)
                        {
                                <h3>@phone.TelePhone</h3>
                            }
                        }
                        <h3>@item.Email</h3>
                    </div>
                    <!-- <div class="about_manager">
                         <p>@item.About</p>
                     </div>-->
                </div>
                }
                }
            </div>
